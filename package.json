{
  "name": "aar-lang",
  "displayName": "aar lang",
  "description": "aardio...",
  "version": "0.0.1",
  "publisher": "xw",
  "repository": {
    "type": "git",
    "url": "https://github.com/wll8/aar-vsc"
  },
  "scripts": {
    "test": "nodemon -q --watch t.js --exec node t.js"
  },
  "engines": {
    "vscode": "^1.33.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:aar",
    "onLanguage:aau",
    "onLanguage:aardio"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "aar-vsc - aardio",
      "properties": {
        "aar.aardioDir": {
          "type": "string",
          "description": "aardio.exe 主程序所在目录(用于使用核心库)"
        },
        "aar.keepWindow": {
          "type": "string",
          "default": "exit",
          "description": "运行结束后的操作(非 vscode 终端运行时可用), keyExit 按键退出, exit 直接退出, keep 保留控制台"
        },
        "aar.runInvscodeTerminal": {
          "type": "boolean",
          "default": false,
          "description": "在 vscode 终端中运行"
        }
      }
  },
    "keybindings": [
      {
        "key": "f5",
        "command": "aar.runAll",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == aar",
          "command": "aar.runAll",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == aar",
          "command": "aar.runAll",
          "group": "navigation@1"
        }
      ]
    },
    "commands": [
      {
        "command": "aar.runAll",
        "category": "aardio",
        "title": "运行",
        "icon": {
          "light": "./img/run-light.png",
          "dark": "./img/run-dark.png"
        }
      }
    ],
    "languages": [
      {
        "id": "aar",
        "aliases": [
          "aardio",
          "aar",
          "aau"
        ],
        "extensions": [
          ".aardio",
          ".aar",
          ".aau"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aar",
        "scopeName": "source.aar",
        "path": "./syntaxes/aar.tmLanguage.json"
      }
    ]
  }
}
